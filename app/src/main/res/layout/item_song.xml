<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="6dp"
    android:background="@color/background_black"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="1."
        android:id="@+id/song_trackNumberTextView"
        android:textSize="@dimen/text_large_title"
        android:gravity="center_vertical|left"
        android:layout_margin="2dp"
        android:textColor="@color/accent" />

    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/song_name_size"
        tools:text="Changes are forever and ever. Always in my head"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/song_trackNumberTextView"
        android:textColor="@color/light_text"
        android:padding="5dp"
        android:layout_toLeftOf="@+id/song_duration"
        android:layout_toStartOf="@+id/song_duration" />

    <TextView
        android:id="@+id/song_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/song_duration_size"
        tools:text="03:37"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:textColor="@color/light_text"
        android:padding="5dp"
        android:gravity="right" />

</RelativeLayout>
