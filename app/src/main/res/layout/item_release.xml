<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/releaseImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:src="@drawable/default_release"
        android:gravity="center_vertical|left"
        android:textColor="@color/accent"
        android:textSize="@dimen/text_large_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:background="@drawable/gradient"
        android:backgroundTintMode="add"
        android:gravity="bottom|right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="right"
            android:shadowColor="@color/background_black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="@color/accent"
            android:textSize="@dimen/release_duration_size"
            android:textStyle="bold"
            tools:text="2015" />

        <TextView
            android:id="@+id/release_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:textAlignment="gravity"
            android:textColor="@color/light_text"
            android:textSize="@dimen/release_name_size"
            android:textStyle="italic"
            tools:text="Drones" />

    </LinearLayout>
</FrameLayout>


