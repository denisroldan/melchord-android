<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_black"
        android:gravity="fill_horizontal|center_horizontal"
    android:padding="2dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:weightSum="1">

        <TextView
            android:id="@+id/tab_name"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tab_name_size"
            tools:text="Uprising"
            android:textColor="@color/light_text"
            android:padding="5dp"
            android:gravity="left|center_vertical|clip_horizontal"
            android:layout_toLeftOf="@+id/tab_type"
            android:layout_toStartOf="@+id/tab_type"
            android:layout_gravity="left" />

         <TextView
                android:id="@+id/tab_type"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textSize="@dimen/tab_type_size"
                tools:text="Chords"
                android:textColor="@color/accent"
                android:padding="5dp"
                android:gravity="center_vertical|clip_horizontal|right"
                android:layout_gravity="right"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
             android:layout_weight="1" />
     </LinearLayout>
</RelativeLayout>
